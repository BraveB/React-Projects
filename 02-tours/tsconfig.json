{
  "compilerOptions": {
    "target": "es2016",
    "jsx": "preserve",
    "moduleDetection": "auto",
    "module": "commonjs",
    "baseUrl": "./src",
    "paths": {
      "components": ["./components/*", "./components"],
      "interfaces": ["./interfaces/*", "./interfaces"]
    },
    "isolatedModules": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  }
}
